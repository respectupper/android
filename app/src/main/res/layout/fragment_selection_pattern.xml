<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/mode_back_img"
        android:fitsSystemWindows="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageButton
                android:layout_margin="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/mode_kaipia"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:layout_margin="10dp"
                android:layout_below="@+id/img1"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/mode_img_2"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ceshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/cesshi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/mRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="5dp"
                android:background="#FFF"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/dddddd"
                    android:visibility="visible"
                    android:id="@+id/relat1"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/dddddd"
                    android:visibility="invisible"
                    android:id="@+id/relat2"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/dddddd"
                    android:visibility="invisible"
                    android:id="@+id/relat3"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/dddddd"
                    android:visibility="invisible"
                    android:id="@+id/relat4"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/dddddd"
                    android:visibility="invisible"
                    android:id="@+id/relat5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>